<%- include('includes/head.ejs') %>

<h1><%= titulo %></h1>

<% if (ordenes.length > 0) { %>

    <% for (let orden of ordenes) { %>

            <div class="container">
                <div class="row">
                    <div class="col s12">
                      <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                          <span class="card-title"><%= titulo %></span>
                          <ul>
                            <li><strong>Nombre: </strong><%= orden.nombre %></li>
                            <li><strong>Apellido: </strong><%= orden.apellido %></li>
                            <li><strong>Email: </strong><%= orden.email %></li>
                            <li><strong>Telefono: </strong><%= orden.telefono %></li>
                            <li><strong>Direccion: </strong><%= orden.direccion %></li>
                          </ul>
                          <a class="waves-effect waves-light btn" href="/lab19/modificar/<%= orden.id %>">Modificar pedido</a>
                        </div>
                      </div>
                    </div>
                  </div>
            </div>

    <% } %>
<% } else { %>
    <p>No hay ordenes</p> 
<% } %>

<%- include('includes/foot.ejs') %>